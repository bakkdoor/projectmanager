<div class="title">
  <h1>
    Alle Arbeitszeiten
  </h1>
</div>

<select id="project_selection" onChange="show_correct_worktime()" onload="show_correct_worktime()">
  <% Project.sorted.each do |project| %>
    <option value="<%= project.id -%>"><%= project.name -%></option>
  <% end %>
</select>

<br>
<br>
<div id="worktime_listings">
  <% Project.sorted.each do |project| %>
    <div id="worktimes_project_<%=project.id -%>" class="worktimes_project_listing" <%= display -%>>
      <div class="subtitle">
	<strong>Arbeitszeiten f√ºr Projekt: <%= project.name %></strong>
      </div>
      <%= render :partial => "worktimes_list", :locals => {:worktimes => project.worktimes, :project => project} %>
    </div>
  <% end %>
</div>
<br />

<!-- this is to make sure, that the correct worktime list
     gets displayed when the page is first loaded
  -->
<script language="JavaScript">
  show_correct_worktime();
</script>
