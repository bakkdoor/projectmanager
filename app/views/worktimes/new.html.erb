<h1>Neue Arbeitszeit</h1>

<% form_for(@worktime) do |f| %>
  <%= f.error_messages %>
  
  <p>
    <%= f.label "Startzeit" %><br />
    <%= f.datetime_select :start_time, :order => [:day, :month, :year], :use_month_names => german_months, :default => 1.hour.ago %>
  </p>
  <p>
    <%= f.label "Dauer" %><br />
    <%= collection_select(:worktime, :length , (0..10).to_a, :to_i, :to_s) %> h
  </p>
  <p>
    <%= f.label "Endzeit" %><br />
    <%= f.datetime_select :end_time, :order => [:day, :month, :year], :use_month_names => german_months %>
  </p>
  <p>
    <%= f.label :comment %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', worktimes_path %>
