<div class="title">
  <h1>Profildaten bearbeiten</h1>
</div>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login, "Benutzername" %><br />
    <%= f.text_field :login %>
  </p>
  <% if current_user.is_admin %>
    <p>
      <%= check_box :user, :is_admin %>
      <%= f.label :is_admin, "Admin?" %><br />
    </p>
  <% end %>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :birthdate, "Geburtsdatum" %><br />
    <%= f.date_select :birthdate, :order => [:day, :month, :year], :use_month_names => german_months,
                      :start_year => 1900, :end_year => Time.now.year, :default => Date.civil(1900,1,1) %>
  </p>
  <p>
    <%= f.label :street, "StraÃŸe" %><br />
    <%= f.text_field :street %>
  </p>
  <p>
    <%= f.label :house_nr, "Hausnr." %><br />
    <%= f.text_field :house_nr %>
  </p>
  <p>
    <%= f.label :zip_code, "PLZ" %><br />
    <%= f.text_field :zip_code %>
  </p>
  <p>
    <%= f.label :city, "Stadt" %><br />
    <%= f.text_field :city %>
  </p>
  <p>
    <%= f.label :telephone, "Tel." %><br />
    <%= f.text_field :telephone %>
  </p>
  <p>
    <%= f.label :icq_im, "ICQ" %><br />
    <%= f.text_field :icq_im %>
  </p>
  <p>
    <%= f.label :jabber, "Jabber" %><br />
    <%= f.text_field :jabber %>
  </p>
  <p>
    <%= f.label :comment, "Kommentar / Beschreibung" %><br />
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= label_tag 'password', "Passwort" %><br/>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= label_tag 'password_confirmation', 'Passwort bestÃ¤tigen' %><br/>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= icon_tag 'disk' %> <%= f.submit "Speichern" %>
  </p>
<% end %>
