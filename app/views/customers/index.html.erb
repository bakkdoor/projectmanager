<h1>Kunden</h1>

<div class="sub_menu">
  <%= link_to 'Neuen Kunden anlegen', new_customer_path %>
</div>

<div class="content_table">
  <table>
    <tr>
      <th>Name</th>
      <th><%= icon_tag('user_suit') %> Kontaktperson</th>
      <th><%= icon_tag('email') %> Email</th>
      <th>Adresse</th>
      <th>Tel.</th>
      <th>Projekte</th>
    </tr>

  <% for customer in @customers %>
    <tr>
      <td><%= link_to h(customer.name), customer %></td>
      <td><%=h customer.contact %></td>
      <td><%= mail_to h(customer.email), customer.email %></td>
      <td>
        <%=h customer.street %> <%=h customer.house_nr %><br/>
        <%=h customer.zip_code %> <%=h customer.city %>
      </td>
      <td><%=h customer.telephone %></td>
      <td><%= customer.projects.collect{|p| link_to h(p.name), p}.join(",<br>") %></td>
      <td><%= link_to 'Bearbeiten', edit_customer_path(customer) %></td>
      <td><%= link_to 'L&ouml;schen', customer, :confirm => 'Sind Sie sicher?', :method => :delete %></td>
    </tr>
  <% end %>
  </table>
</div>

