  <% form_for(@customer) do |f| %>
    <%= f.error_messages %>
    <table>
      <tr>
        <td width="50%">
          <p>
             <%= f.label :name%><br />
             <%= f.text_field :name, :class => "data_form" %>
           </p>
           <p>
             <%= f.label :street, "StraÃŸe" %><br />
             <%= f.text_field :street %>
